<!DOCTYPE html>
<html>
<% @entries.each do |entry|%>
<div class="title_high row">

    <div class="col s12 m7">
        <div class="card">
            <div class="card-image">
                <span class="black-text card-title"><%= entry.title %></span>
                <% if user_signed_in? && current_user.id == entry.user_id %>
                <%= link_to '編集',"/entry/#{entry.id}/edit",class:'tag',method: :get %>
                <%= link_to '削除',"/entry/#{entry.id}",class:'tag',method: :delete %>
                <% end %>
            </div>
            <div class="card-content">


                <p>
                    <%= simple_format(entry.body) %>
                </p>
            </div>
        </div>
    </div>
</div>

<% end %>

<%= paginate(@entries) %>

</html>
